#! /bin/sh

if [ "`uname -s`" = "Darwin" ]
then
    aclocal -I config && \
           glibtoolize --automake --force --copy && \
           automake --copy && \
           autoconf 
else
    aclocal -I config && \
           libtoolize --automake --force --copy && \
           automake --copy && \
           autoconf 
fi
# Taf!
